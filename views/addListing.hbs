<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Listing</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <main>
    <form action="/add-listing" method="POST" class="form-container">
  <div class="form-group">
    <label for="_id">Listing ID:</label>
    <input type="text" id="_id" name="_id" placeholder="Enter unique ID">
  </div>
  <div class="form-group">
    <label for="listing_url">Listing URL:</label>
    <input type="text" id="listing_url" name="listing_url" placeholder="Enter listing URL">
  </div>
  <div class="form-group">
    <label for="name">Property Name:</label>
    <input type="text" id="name" name="name" placeholder="Enter property name">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea id="description" name="description" placeholder="Enter property description"></textarea>
  </div>
  <div class="form-group">
    <label for="property_type">Property Type:</label>
    <input type="text" id="property_type" name="property_type" placeholder="Enter property type">
  </div>
  <div class="form-group">
    <label for="room_type">Room Type:</label>
    <input type="text" id="room_type" name="room_type" placeholder="Enter room type">
  </div>
  <div class="form-group">
    <label for="accommodates">Accommodates:</label>
    <input type="number" id="accommodates" name="accommodates" placeholder="Number of guests">
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" placeholder="Enter price per night">
  </div>
  <!-- Optional Fields -->
  <div class="form-group">
    <label for="summary">Summary:</label>
    <textarea id="summary" name="summary" placeholder="Enter property summary"></textarea>
  </div>
  <button type="submit" class="btn btn-purple">Add Listing</button>
</form>


    <!-- Success Message -->
    {{#if success}}
      <p class="success">{{success}}</p>
    {{/if}}

    <!-- Error Message -->
    {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}}
  </main>
</body>
</html>
