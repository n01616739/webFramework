<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each listings}}
    <div class="col">
      <div class="card h-100 shadow-sm">
        <img src="{{this.imageUrl}}" class="card-img-top" alt="Airbnb Image">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-purple">{{this.title}}</h5>
          <p class="card-text flex-grow-1">{{this.description}}</p>
          <a href="/details/{{this.id}}" class="btn btn-sm btn-purple mt-auto align-self-center">View More Details</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
